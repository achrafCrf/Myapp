pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "myjenkinsapp:${env.BUILD_NUMBER}"
        DOCKERHUB_REPO = "lyazid22/myjenkinsapp"
    }

    stages {
        
        stage('Checkout') {
            steps {
                echo "ğŸ“¥ Cloning repository..."
                git branch: 'main', url: 'https://github.com/achrafCrf/Myapp.git'
            }
        }

        stage('Install dependencies') {
            steps {
                echo "ğŸ“¦ Installing Python dependencies..."
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                echo "ğŸ§ª Running tests..."
                sh 'pytest -q'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "ğŸ³ Building Docker image..."
                sh "docker build -t ${DOCKER_IMAGE} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                echo "ğŸ“¤ Pushing to Docker Hub..."
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    sh "echo $PASS | docker login -u $USER --password-stdin"
                    sh "docker tag ${DOCKER_IMAGE} ${DOCKERHUB_REPO}:${env.BUILD_NUMBER}"
                    sh "docker push ${DOCKERHUB_REPO}:${env.BUILD_NUMBER}"
                }
            }
        }

        stage('Deploy') {
            steps {
                echo "ğŸš€ Deploying (simulation)..."
                sh "echo 'Application deployed successfully!'"
            }
        }
    }

    post {
        success {
            echo "ğŸ‰ Pipeline finished successfully"
        }
        failure {
            echo "âŒ Pipeline failed"
        }
    }
}

